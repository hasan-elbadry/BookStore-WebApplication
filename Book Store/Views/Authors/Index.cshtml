@model IEnumerable<Author>

<div class="d-flex justify-content-between align-items-center mt-4 mb-4">
    <h3 class="text-primary">Authors List</h3>
    <a class="btn btn-success btn-lg" asp-action="Add">Add Author</a>
</div>
@{
    if(!Model.Any())
    {
        <div class="alert alert-dismissible alert-warning mt-5">
            <h4 class="alert-heading">Warning!</h4>
            <p class="mb-0">No authors found.</p>
        </div>
    }
    else
    {
        <div class="container mt-5">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var author in Model)
                        {
                            <tr>
                                <td>@author.Id</td>
                                <td>@author.Name</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                        <a class="btn btn-primary animate-btn" asp-action="Update" asp-route-id="@author.Id">Edit</a>
                                        <a class="btn btn-info animate-btn" asp-controller="Authors" asp-action="Details" asp-route-id="@author.Id">Details</a>
                                        <a class="btn btn-danger animate-btn" asp-action="Delete" asp-route-id="@author.Id">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    }
}